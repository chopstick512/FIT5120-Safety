extends layout

block styleblock
    link(rel="stylesheet" href="/css/slider.css")
    style(type="text/css").
        #amap {
            width: 100%;
            height: 500px;
        }
        #smallmap1,#smallmap2,#smallmap3,#smallmap4 {
            width: 100px;
            height: 100px;
            border-radius: 10px;
        }
        .route-container {
            display: flex;
            flex-wrap: wrap;
        }
        .route-card {
            margin-right: 7px;
            margin-bottom: 20px;
            border: 0 !important;
        }
        .route-subtitle {
            font-size: 0.6em;
            margin-left: .25em;
        }
        .search-bar-container {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }
        .search-link {
            font-size: 1em;
        }
block content
  include header2.pug
  .container-fluid.pmargin-vertical-20(style="width:85%;")
    //.search-bar-container
        span.icon.iconfont.icon-Distance-.mr-2.bg-transparent.text-muted(style="font-size:1.5em;" title="Distance")
        .tick-slider
            .tick-slider-value-container
                #weightLabelMin.tick-slider-label 0km
                #weightLabelMax.tick-slider-label 50km
                #weightValue.tick-slider-value
            .tick-slider-background
            #weightProgress.tick-slider-progress
            #weightTicks.tick-slider-tick-container
            input#weightSlider.tick-slider-input(type='range', min='0', max='50', step='1', value='9', data-tick-step='1', data-tick-id='weightTicks', data-value-id='weightValue', data-progress-id='weightProgress', data-handle-size='18', data-min-label-id='weightLabelMin', data-max-label-id='weightLabelMax')
    .card.scard
      .card-body
        .content
          .search-bar-container
            .input-group.bg-white.shadow.p-2.mr-2.rounded
                .input-group-prepend
                    span.icon.iconfont.icon-location.input-group-text.border-0.bg-white.text-muted
                input.form-control.border-0(type="text" placeholder="City of Melbourne")
            .input-group.bg-white.shadow.p-2.mr-2.rounded
                .input-group-prepend
                    span.icon.iconfont.icon-user.input-group-text.border-0.bg-white.text-muted
                select.form-control.border-0
                    option(value="") Exclusive for bike
            .input-group.bg-white.shadow.p-2.mr-2.rounded
                .input-group-prepend
                    span.icon.iconfont.icon-user.input-group-text.border-0.bg-white.text-muted
                select.form-control.border-0
                    option(value="") Group
            .btn.lbtn(href="#") 
                span Search
                span.icon.iconfont.icon-cc-arrow-right.font-bold 
          .row
            .col-md-6
                p Routes Near 
                    label.green-color City of Melbourne
                p
                    h4=routePath.title
                .input-group.bg-white
                    .input-group-prepend
                        span.icon.iconfont.icon-leibie.input-group-text.border-0.bg-white.text-muted
                    .form-control.border-0 Rank No.#{routePath.safety_rank}
                .input-group.bg-white
                    .input-group-prepend
                        span.icon.iconfont.icon-leibie.input-group-text.border-0.bg-white.text-muted
                    .form-control.border-0=routePath.direction
                .input-group.bg-white
                    .input-group-prepend
                        span.icon.iconfont.icon-leibie.input-group-text.border-0.bg-white.text-muted
                    .form-control.border-0=routePath.type
                .input-group.bg-white
                    .input-group-prepend
                        span.icon.iconfont.icon-leibie.input-group-text.border-0.bg-white.text-muted
                    .form-control.border-0 Number of previous crash points:
                        label.text-danger=routePath.crash_points
                .input-group.bg-white
                    .input-group-prepend
                        span.icon.iconfont.icon-message.input-group-text.border-0.bg-white.text-muted
                    .form-control.border-0 Safety Recommendations: 
                .input-group.bg-white
                    .form-control.border-0 The landmark building of the route is shown on the right.
                .input-group.bg-white
                    .form-control.border-0=routePath.safety_recommendations
            .col-md-6
              img.img-fluid(src=routePath.image_url)
block scriptblock
  script(type="text/javascript" src="/js/slider.js")
  script(type="text/javascript").
