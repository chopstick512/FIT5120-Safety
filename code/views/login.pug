extends layout
block content
    .container(style="width:60%")
        .card.mb-3.lbox
            .row.no-gutters
                .col-md-4
                    .lbox-left
                        .lbox-title
                            svg.bi.bi-people-circle(width="2em" height="2em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg")
                                path(d="M13.468 12.37C12.758 11.226 11.195 10 8 10s-4.757 1.225-5.468 2.37A6.987 6.987 0 0 0 8 15a6.987 6.987 0 0 0 5.468-2.63z")
                                path(fill-rule="evenodd" d="M8 9a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" clip-rule="evenodd")
                                path(fill-rule="evenodd" d="M8 1a7 7 0 1 0 0 14A7 7 0 0 0 8 1zM0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8z" clip-rule="evenodd")
                        .lbox-text-title Customer Login
                .col-md-8
                    .card-body
                        form(action="/login.html", method="POST")
                            .form-group
                                label(for="username" class="field-label") Username
                                input(type="text" class="form-control" id="username" name="username")
                            .form-group
                                label(for="password" class="field-label") Password
                                input(type="password" class="form-control" id="password" name="password")
                                p.text-right
                                    a(href="/register.html" class="link") &gt;&gt;Register
                            .form-group
                                small(id="error-tips" class="form-text text-danger")
                                button(type="submit" class="btn btn-primary lbtn" id="login-btn") Login
                                small(class="form-text text-danger") #{error}